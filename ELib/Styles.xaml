<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style TargetType="{x:Type materialDesign:Snackbar}">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Background" Value="#f5813d" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style TargetType="{x:Type materialDesign:SnackbarMessage}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style  TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background" Value="#0dab50" />
        <Setter Property="Foreground" Value="LightGray" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="BorderBrush" Value="#215537" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
</ResourceDictionary>